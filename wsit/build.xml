            </fileset>
        </copy>
         
        <copy todir="${ws.source.dir}/wsit/nbproject">
            <fileset dir="${wsit.ws.dir}/nbproject"/>
        </copy>
        <copy todir="${ws.source.dir}/wsit/etc">
