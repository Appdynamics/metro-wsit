<project name="WSIT 1.0 EA On Tomcat" default="help" basedir=".">
    <property environment="env"/>
    <property name="tomcat.home" value="${env.CATALINA_HOME}"/>
    <property name="tomcat.lib.home" value="${tomcat.home}/shared/lib"/>
    <property name="tomcat.endorsed" value="${tomcat.home}/common/endorsed"/>
    <property name="java.home" value="${env.JAVA_HOME}"/>

    <target name="install" depends="install-api-check">
        <echo message="Installing WSIT 1.0 EA on ${tomcat.home} ..."/>

        <!-- TODO: Identify placeholder for tools.jar -->
        <copy toDir="${tomcat.lib.home}" overwrite="true">
            <fileset dir="lib">
                <include name="webservices-rt.jar"/>
                <include name="webservices-tools.jar"/>
                <include name="webservices-extra.jar"/>
                <include name="webservices-extra-api.jar"/>
            </fileset>
        </copy>
        <copy toDir="${tomcat.endorsed}" overwrite="true">
            <fileset dir="lib">
                <include name="webservices-api.jar"/>
            </fileset>
        </copy>

        <echo message="... installation complete."/>
    </target>

    <target name="install-api-check" if="install.api">
        <antcall target="install-api"/>
    </target>

    <target name="install-api">
        <copy toDir="${java.home}/lib/endorsed" overwrite="true">
            <fileset dir="lib">
                <include name="webservices-api.jar"/>
            </fileset>
        </copy>
    </target>

    <target name="uninstall">
        <delete>
            <fileset dir="${tomcat.lib.home}" includes="webservices-rt.jar, webservices-tools.jar, webservices-extra.jar, webservices-extra-api.jar"/>
        </delete>
        <delete>
            <fileset dir="${tomcat.endorsed}" includes="webservices-api.jar"/>
        </delete>
        <delete quiet="true">
            <fileset dir="${java.home}/lib/endorsed" includes="webservices-api.jar"/>
        </delete>
    </target>

    <target name="help">
        <echo message="install  :"/>
        <echo message="  Installs WSIT 1.0 EA on Tomcat"/>
        <echo/>
        <echo message="  NOTE: If using JDK 6, adding -Dinstall.api='true' when invoking the 'install' target will copy"/>
        <echo message="  webservices-api.jar into JAVA_HOME/lib/endorsed"/>
        <echo message="  to prevent conflicts between the JAX-WS 2.0 implementation bundled with JDK 6 and JAX-WS 2.1 bundled with WSIT."/>
        <echo message="  For JDK 5, it is unnecessary to copy 'webservices-api.jar' to the 'endorsed' directory but doing so will not cause problems."/>
        <echo/>
        <echo message="install-api: "/>
        <echo message="  Installs 'webservices-api.jar' into JAVA_HOME/lib/endorsed (and nothing else)"/>
        <echo message="  Only needed for JDK 6 and only if -Dinstall.api='true' was not passed during WSIT installation"/>
        <echo/>
        <echo message="uninstall:"/>
        <echo message="  Uninstalls WSIT 1.0 EA from Tomcat"/>
        <echo/>
        <echo message="CATALINA_HOME must be set to the installation directory of Tomcat."/>
        <echo/>
        <echo message="Usage: ANT_HOME/bin/ant -f wsit-on-tomcat.xml [-Dinstall.api='true'] {install,uninstall}"/>        
    </target>
</project>
