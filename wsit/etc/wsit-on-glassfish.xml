<project name="WSIT 1.0 EA On GlassFish v2" default="help" basedir=".">
    <property file="../build.properties"/>
    <property environment="env"/>
    <property name="as.home" value="${env.AS_HOME}"/>
    <property name="as.lib.home" value="${as.home}/lib"/>
    <property name="backup.dir" value="${as.home}/.wsit-1.0"/>

    <condition property="notInstalled">
        <not>
            <available file="${backup.dir}"/>
        </not>
    </condition>

    <condition property="ext" value="" else=".bat">
        <os family="unix"/>
    </condition>

    <condition property="unix">
        <os family="unix"/>
    </condition>

    <target name="init" if="notInstalled" description="Backup existing WSIT jars and tool scripts">
        <mkdir dir="${backup.dir}"/>
        <copy todir="${backup.dir}" failonerror="false">
            <fileset dir="${as.home}/bin" includes="wsimport${ext}, wsgen${ext}, xjc${ext}, schemagen${ext}"/>
            <fileset dir="${as.lib.home}" includes="webservices-rt.jar, webservices-tools.jar"/>
            <fileset dir="${as.lib.home}/endorsed" includes="webservices-api.jar"/>
        </copy>
    </target>

    <target name="install" depends="init,update-classpath,install-api-check" description="Install latest WSIT jars">
        <echo message="Installing WSIT 1.0 EA on ${as.home} ..."/>

        <copy todir="${as.lib.home}" overwrite="true">
            <fileset dir="${basedir}/lib">
                <include name="webservices-rt.jar"/>
                <include name="webservices-tools.jar"/>
            </fileset>  
        </copy>
        <copy todir="${as.lib.home}/endorsed" overwrite="true">
            <fileset dir="${basedir}/lib">
                <include name="webservices-api.jar"/>
            </fileset>
        </copy>
        <echo message="... installation complete."/>
    </target>

    <target name="install-api-check" if="install.api" description="Internal-use, conditional target calls install-api">
        <antcall target="install-api"/>
    </target>

    <target name="install-api" description="Installs 'webservices-api.jar' into JAVA_HOME/lib/endorsed">
        <copy toDir="${java.home}/lib/endorsed" overwrite="true">
            <fileset dir="lib">
                <include name="webservices-api.jar"/>
            </fileset>
        </copy>
    </target>

    <target name="uninstall" unless="notInstalled"
            description="Restore original WSIT jars and tool scripts">
        <echo message="Uninstalling WSIT 1.0 EA from ${as.home} ..."/>

        <copy todir="${as.home}/bin" overwrite="true">
            <fileset dir="${backup.dir}" includes="wsimport${ext}, wsgen${ext}, xjc${ext}, schemagen${ext}"/>
        </copy>
        <!-- The 'copy' task does not preserve permissions -->
        <chmod perm="+x" dir="${as.home}/bin" includes="wsimport${ext}, wsgen${ext}, xjc${ext}, schemagen${ext}"/>

        <copy todir="${as.home}/lib" overwrite="true">
            <fileset dir="${backup.dir}" includes="webservices-rt.jar, webservices-tools.jar"/>
        </copy>

        <copy todir="${as.home}/lib/endorsed" overwrite="true">
            <fileset dir="${backup.dir}" includes="webservices-api.jar"/>
        </copy>

        <delete dir="${backup.dir}" includeemptydirs="true"/>

        <echo message="... uninstall complete."/>
    </target>

    <target name="update-classpath" if="notInstalled">
        <echo message="Updating classpath"/>
        <antcall target="update-classpath-unix"/>
        <antcall target="update-classpath-win"/>
    </target>

    <target name="update-classpath-unix" if="unix">
        <replace dir="${as.home}/bin" includes="wsimport, wsgen, xjc, schemagen">
            <replacetoken>CLASSPATH=</replacetoken>
            <replacevalue>WSIT_CLASSPATH="$AS_INSTALL"/lib/webservices-tools.jar:"$AS_INSTALL"/lib/webservices-rt.jar:"$AS_INSTALL"/lib/endorsed/webservices-api.jar

CLASSPATH=${WSIT_CLASSPATH}:</replacevalue>
        </replace>
        <chmod perm="+x" dir="${as.home}/bin" includes="wsimport, wsgen, xjc, schemagen"/>
    </target>

    <target name="update-classpath-win" unless="unix">
        <replace dir="${as.home}/bin" includes="wsimport${ext}, wsgen${ext}, xjc${ext}, schemagen${ext}">
            <replacetoken>CLASSPATH=</replacetoken>
            <replacevalue>WSIT_CLASSPATH=%AS_INSTALL%\lib\webservices-tools.jar;%AS_INSTALL%\lib\webservices-rt.jar;"%AS_INSTALL%"\lib\endorsed\webservices-api.jar

set CLASSPATH=%WSIT_CLASSPATH%;</replacevalue>
        </replace>
    </target>

    <target name="help">
        <echo message="install: "/>
        <echo message="  Installs WSIT 1.0 EA on GlassFish v2"/>
        <echo/>
        <echo message="  NOTE: If using JDK 6, adding -Dinstall.api='true' when invoking the 'install' target will copy"/>
        <echo message="  webservices-api.jar into JAVA_HOME/lib/endorsed"/>
        <echo message="  to prevent conflicts between the JAX-WS 2.0 implementation bundled with JDK 6 and JAX-WS 2.1 bundled with WSIT."/>
        <echo message="  For JDK 5, it is unnecessary to copy 'webservices-api.jar' to the 'endorsed' directory but doing so will not cause problems."/>
        <echo/>
        <echo message="install-api: "/>
        <echo message="  Installs 'webservices-api.jar' into JAVA_HOME/lib/endorsed (and nothing else)"/>
        <echo message="  Only needed for JDK 6 and only if -Dinstall.api='true' was not passed during WSIT installation"/>
        <echo/>
        <echo message="uninstall: "/>
        <echo message="  Uninstalls WSIT 1.0 EA from GlassFish v2"/>
        <echo/>
        <echo message="AS_HOME is set to the installation directory of GlassFish v2."/>
        <echo/>
        <echo message="Usage: ANT_HOME/bin/ant -f wsit-on-glassfish.xml [-Dinstall.api='true'] {install,uninstall}"/>
    </target>
</project>
