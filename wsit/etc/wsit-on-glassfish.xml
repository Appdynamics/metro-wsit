<project name="WSIT 1.0 On GlassFish v2" default="help" basedir=".">
    <property file="../build.properties"/>
    <property environment="env"/>
    <property name="as.home" value="${env.AS_HOME}"/>
    <property name="as.lib.home" value="${as.home}/lib"/>
    <property name="backup.dir" value="${as.home}/.wsit-1.0"/>

    <condition property="notInstalled">
        <not>
            <available file="${backup.dir}"/>
        </not>
    </condition>

    <condition property="ext" value="" else=".bat">
        <os family="unix"/>
    </condition>

    <condition property="unix">
        <os family="unix"/>
    </condition>

    <target name="init" if="notInstalled" description="Backup existing WSIT jars and tool scripts">
        <mkdir dir="${backup.dir}"/>
        <copy todir="${backup.dir}" failonerror="false">
            <fileset dir="${as.lib.home}" includes="webservices-rt.jar, webservices-tools.jar"/>
            <fileset dir="${as.lib.home}/endorsed" includes="webservices-api.jar"/>
        </copy>
    </target>

    <condition property="jdk6">
        <contains substring="1.6.0" string="${java.version}"/>
    </condition>

    <condition property="endorsed-api-flagged">
        <equals arg1="${install.api}" arg2="true"/>
    </condition>
 
    <target name="jdk6-message" if="jdk6">
        <echo message="NOTE: WSIT is being installed using JDK6."/>
        <echo/>
        <echo message="  The file 'web-services-api.jar' must be installed"/>
        <echo message="  into $JAVA_HOME/lib/endorsed for WSIT to prevent"/>
        <echo message="  conflicts between the JAX-WS 2.0 classes"/>
        <echo message="  bundled with JDK 6 and JAX-WS 2.1 bundled with WSIT."/>
        <echo/>
        <echo message="  You must have write-permissions on the JDK 6 directory."/>
        <echo message="  This is a concern when using a system-wide JDK installation."/>
        <echo/>
        <echo message="  To install webservices-api.jar:"/>
        <echo/>
        <echo message="  Invoke 'ant install-api' to install only"/>
        <echo message="  webservices-api.jar into the 'endorsed' directory."/>
        <echo/>
    </target>
    
    <target name="install" depends="init" description="Install latest WSIT jars">
        <echo message="Installing WSIT 1.0 on ${as.home} ..."/>

        <copy todir="${as.lib.home}" overwrite="true">
            <fileset dir="${basedir}/lib">
                <include name="webservices-rt.jar"/>
                <include name="webservices-tools.jar"/>
            </fileset>  
        </copy>
        <copy todir="${as.lib.home}/endorsed" overwrite="true">
            <fileset dir="${basedir}/lib">
                <include name="webservices-api.jar"/>
            </fileset>
        </copy>
        <antcall target="install-api"/>
        <echo message="... installation complete."/>
    </target>

    <target name="install-api" if="jdk6" description="Installs 'webservices-api.jar' into $JAVA_HOME/lib/endorsed">
        <mkdir dir="${java.home}/lib/endorsed"/>
        <copy toDir="${java.home}/lib/endorsed" overwrite="true">
            <fileset dir="lib">
                <include name="webservices-api.jar"/>
            </fileset>
        </copy>
    </target>

    <target name="uninstall" unless="notInstalled"
            description="Restore original WSIT jars and tool scripts">
        <echo message="Uninstalling WSIT 1.0 from ${as.home} ..."/>

        <copy todir="${as.lib.home}" overwrite="true">
            <fileset dir="${backup.dir}" includes="webservices-rt.jar, webservices-tools.jar"/>
        </copy>

        <copy todir="${as.lib.home}/endorsed" overwrite="true">
            <fileset dir="${backup.dir}" includes="webservices-api.jar"/>
        </copy>

        <delete dir="${backup.dir}" includeemptydirs="true"/>

        <delete quiet="true">
            <fileset dir="${java.home}/lib/endorsed" includes="webservices-api.jar"/>
        </delete>

        <echo message="... uninstall complete."/>
    </target>

    <target name="help">
        <echo message="install: "/>
        <echo message="  Installs WSIT 1.0 on GlassFish v2"/>
        <echo/>
        <echo message="uninstall: "/>
        <echo message="  Uninstalls WSIT 1.0 from GlassFish v2"/>
        <echo/>
        <echo message="$AS_HOME must be set to the installation directory of GlassFish v2."/>
        <echo/>
        <echo message="Usage:"/>
        <echo message="  ant -f wsit-on-glassfish.xml {install,uninstall}"/>
        <antcall target="jdk6-message"/>
    </target>
</project>
