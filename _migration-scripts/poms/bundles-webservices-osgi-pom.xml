<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.glassfish.metro</groupId>
        <artifactId>@parent.id@</artifactId>
        <version>2.1-SNAPSHOT</version>
    </parent>

    <groupId>com.sun.xml.ws</groupId>
    <artifactId>@module.id@</artifactId>
    <packaging>jar</packaging>
    <name>@module.name@</name>
    <description>Metro Web Services Runtime OSGi Bundle</description>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.groupId}</Bundle-SymbolicName>
                        <Bundle-Name>metro</Bundle-Name>
                        <Bundle-Version>${project.version}</Bundle-Version>

                        <Export-Package>
                            com.sun.tools.ws.spi;version=${jaxws.ri.version},
                            com.sun.tools.ws.util.xml;version=${jaxws.ri.version},
                            com.sun.xml.fastinfoset.sax;version=${project.version},
                            com.sun.xml.fastinfoset.stax;version=${project.version},
                            com.sun.xml.messaging.saaj.soap;version=1.3,
                            com.sun.xml.ws;version=${jaxws.ri.version},
                            com.sun.xml.ws.*;version=${jaxws.ri.version},
                            javax.xml.registry;version=1.0,
                            javax.xml.registry.*;version=1.0,
                            javax.xml.rpc;version=1.1,
                            javax.xml.rpc.*;version=1.1,
                            org.jvnet.fastinfoset;version=${project.version},
                            org.jvnet.staxex;version=${project.version},
                            *
                        </Export-Package>
                        <Import-Package>
                            com.sun.appserv.server;resolution:=optional,
                            com.sun.enterprise.security.*;resolution:=optional,
                            com.sun.enterprise.transaction.*;resolution:=optional,
                            com.sun.enterprise.web.*;resolution:=optional,
                            com.sun.enterprise.webservice;resolution:=optional,
                            com.sun.enterprise.webservice.monitoring;resolution:=optional,
                            com.sun.mail.util;resolution:=optional,
                            com.sun.msv.*;resolution:=optional,
                            com.sun.xml.bind.serializer;resolution:=optional,
                            com.sun.xml.bind.validator;resolution:=optional,
                            com.sun.xml.rpc.*;resolution:=optional,
                            com.sun.xml.ws.spi.runtime;resolution:=optional,
                            javax.ejb;resolution:=optional;version=3.0,
                            javax.jws;version=2.0,
                            javax.jws.soap;version=2.0,
                            javax.xml.ws;version=${jaxws.spec.version},
                            javax.xml.ws.*;version=${jaxws.spec.version},
                            javax.xml.bind;version=${jaxb.spec.version},
                            javax.xml.bind.*;version=${jaxb.spec.version},
                            org.apache.coyote;resolution:=optional,
                            org.apache.tomcat.util.buf;resolution:=optional,
                            org.iso_relax.verifier.impl;resolution:=optional,
                            org.relaxng.datatype;resolution:=optional,
                            *
                        </Import-Package>
                        <Private-Package>*</Private-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <!-- Shaded dependencies -->
        <dependency>
            <groupId>${parent.groupId}</groupId>
            <artifactId>wsit-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>${parent.groupId}</groupId>
            <artifactId>wsit-impl</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Non-wsit dependencies -->
        <dependency>
            <groupId>com.sun.xml.ws.security.kerb</groupId>
            <artifactId>kerberos-wss-extension</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.security</groupId>
            <artifactId>saml-jaxb10-bindings</artifactId>
        </dependency>
        <dependency>
            <groupId>javax.xml.crypto</groupId>
            <artifactId>jsr105-api</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.security</groupId>
            <artifactId>jsr105-impl</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.security</groupId>
            <artifactId>apache-xmlsec</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.wss.core.reference</groupId>
            <artifactId>keyidspi-ibm-impl</artifactId>
        </dependency>
        <dependency>
            <groupId>javax.xml</groupId>
            <artifactId>jaxr-api</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.registry</groupId>
            <artifactId>jaxr-impl</artifactId>
        </dependency>
        <dependency>
            <groupId>javax.xml</groupId>
            <artifactId>jaxrpc-api</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.rpc</groupId>
            <artifactId>jaxrpc-impl</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.rpc</groupId>
            <artifactId>jaxrpc-spi</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.ws</groupId>
            <artifactId>jaxws-rt</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.ws</groupId>
            <artifactId>policy</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sun.org.apache.xml.internal</groupId>
            <artifactId>resolver</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.messaging.saaj</groupId>
            <artifactId>saaj-impl</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.stream</groupId>
            <artifactId>sjsxp</artifactId>
        </dependency>
        <dependency>
            <groupId>net.java.dev.stax-utils</groupId>
            <artifactId>stax-utils</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.stream.buffer</groupId>
            <artifactId>streambuffer</artifactId>
        </dependency>
    </dependencies>
</project>