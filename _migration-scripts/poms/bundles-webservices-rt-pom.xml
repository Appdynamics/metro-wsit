                <artifactId>maven-shade-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <artifactSet>
                                <includes>
                                    <inlcude>${project.groupId}.wsit:*</inlcude>
                                </includes>
                                <excludes>
                                    <exclude>javax.activation:activation</exclude>
                                    <exclude>javax.xml:webservices-api</exclude>
                                    <!--exclude>junit:junit</exclude-->
                                </excludes>
                            </artifactSet>
                            <transformers>
                                <transformer implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer"/>
                            </transformers>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
